<Window x:Class="SimpleMan.Blues.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SimpleMan.Blues"
        mc:Ignorable="d"
        WindowStyle="None"
        Background="{x:Null}"
        Title="MainWindow"
        AllowsTransparency="True" Topmost="True"
        ShowInTaskbar="False" WindowState="Maximized">
    <Grid Margin="20">
        <!--<TextBlock HorizontalAlignment="Right" Height="40" VerticalAlignment="Top" FontSize="14" Foreground="White"
                   Text="{Binding Path=Start}"/>-->
        <TextBlock HorizontalAlignment="Right" Height="30" VerticalAlignment="Top" FontSize="12" Foreground="White"
                   Text="{Binding Path=RunningWeek, StringFormat='Week #{0}'}" FontFamily="Calibri" />
        <TextBlock HorizontalAlignment="Right" Height="30" VerticalAlignment="Top" FontSize="12" Foreground="White" Margin="0, 15"
                   Text="{Binding Path=RunningDay, StringFormat='Day #{0}'}" FontFamily="Calibri" />
        <TextBlock HorizontalAlignment="Right" Height="40" VerticalAlignment="Top" FontSize="16" Foreground="White" Margin="0, 30"
                   Text="{Binding Path=ActiveFor}" FontFamily="Calibri" />
    </Grid>
</Window>
